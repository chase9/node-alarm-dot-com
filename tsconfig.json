{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018", "dom"
    ],
    "declaration": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
